{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/N-Oldroyd/N-Oldroyd.github.io/refs/heads/main/european_productivity_data-2.json"},
  "title": {"text": "Labour Productivity across European Countries", "anchor": "middle", "fontSize": 15},
  "vconcat":[
    {
    "width": 480,
    "height": 300,
    "transform": [{"filter": 
    "datum.country == 'UK' || datum.country == 'Italy' || datum.country == 'Germany' || datum.country == 'Spain' || datum.country == 'Netherlands' || datum.country == 'Poland' || datum.country == 'Belgium' || datum.country == 'Sweden' || datum.country == 'Ireland'"}],
    "encoding": {
      "x": {"field": "date", 
            "type": "temporal", 
            "title": "",
            "scale": {"domain": {"param": "brush"}}, 
            "timeUnit": "year", 
            "axis": {"tickCount": 10, "gridColor": "white"}},
      "y": {"field": "value", 
            "type": "quantitative", 
            "title": "Output per Hour Index, 1995 = 100", 
            "axis": {"titleAlign": "left", 
                    "titleY": -5, 
                    "titleAngle": 0, 
                    "titleX": 0,
                    "gridDash": [5]}},
      "color": {
          "field":"country",
          "type":"nominal",
          "legend": {"title": "", "orient": "bottom", "labelFontSize": 8}
      },
      "opacity": {
        "condition": [
            {"param": "highlight", "value": 1}
        ],
        "value": 0.2
      }
      
    },
    "layer": [{
      "params": [
        {
        "name": "highlight",
        "value": [{"country": "UK"}],
        "select": {
          "type": "point",
          "fields": ["country"],
          "on": "click",
          "toggle": "event.shiftKey",
          "clear": "dblclick"},
          "bind": "legend"     
        }
            
    ],
      "mark": {"type": "line", "strokeWidth": 1.5, "stroke": "transparent"}
    }, {
      "mark": {"type": "line", "strokeWidth": 1.5, "tooltip": {"content": "encoding"}}
    }, {
     "encoding": {
        "x": {"aggregate": "max", "field": "date"},
        "y": {"aggregate": {"argmax": "date"}, "field": "value"}
      },
      "layer": [{
      "mark": {"type": "circle"}
    }, {
      "mark": {"type": "text", "align": "left", "dx": 4},
      "encoding": {"text": {"field":"country", "type": "nominal"}}
    }]
  }]
},
{
    "width": 480,
    "height": 100,
    "mark": {"type": "line", "strokeWidth": 1},
    "params": [
      {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}, "value": 
            {"x": [{"year": 1995},
                   {"year": 2015}]}}
    ],
    "transform": [{"filter": 
    "datum.country == 'UK' || datum.country == 'Italy' || datum.country == 'Germany' || datum.country == 'Spain' || datum.country == 'Netherlands' || datum.country == 'Poland' || datum.country == 'Belgium' || datum.country == 'Sweden' || datum.country == 'Ireland'"}],
    "encoding": {
      "x": {"field": "date", "type": "temporal", "title": ""},
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {"tickCount": 3, "grid": false},
        "title": ""
      },
        "color": {"field": "country", "type": "nominal"},
        "opacity": {
        "condition": [
            {"param": "highlight", "value": 1}
        ],
        "value": 0.2
      }
      
    }
  }
  ]
}


