{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/N-Oldroyd/N-Oldroyd.github.io/refs/heads/main/worldbank_data-4.json"
  },
  "width": 600,
  "height": 400,
  "title": {"text": "Global Capital Investment", "subtitle": "Gross Fixed Capital Formation by Country (% GDP)", "fontSize": 15, "subtitleFontSize": 10},
  "params": [
    {
      "name": "Year",
      "value": 2022,
      "bind": {
        "input": "range",
        "step": 1,
        "min": 1975,
        "max": 2022,
        "name": "Year:"
      }
    }
  ],
  "transform": [
    {
      "lookup": "countryiso3code",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/N-Oldroyd/N-Oldroyd.github.io/refs/heads/main/map_world.geojson",
          "format": {"property": "features"}
        },
        "key": "properties.ISO3",
        "fields": ["type", "geometry", "properties"]
      }
    },
    {"filter": "datum.date == Year"}
  ],
  "projection": {
    "type": "naturalEarth1"
  },
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {"color": {"value": "lightgrey"},
    "tooltip": [
      {"field": "country", "title": "Country"},
      {"field": "value", "title": "Gross Fixed Capital Formation (% of GDP)"}]
    }
    },
    {"mark": {"type": "geoshape"}}
  ],
  
  "encoding": {"color": {"field": "value", "type": "quantitative", "legend": {"title": ""}, "scale": {"domain": [0,50]}},
"tooltip": [
      {"field": "country", "title": "Country"},
      {"field": "value", "title": "Gross Fixed Capital Formation (% of GDP)"}],
  }
}
