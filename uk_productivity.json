{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Productivity",
    "anchor": "start",
    "subtitle": "Output per hour, Index, base year = 100 | Source: ONS through ECO API",
    "fontSize": 19,
    "subtitleFontSize": 12,
    "color": "#2c1376",
    "subtitleColor": "#000000"
  },
  "height": "container",
  "width": "container",
  "autosize": {
    "type": "fit"},
  "background": "#ffffff",
  "view": {
    "fill": "#ffffff",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/prod?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#008cb4",
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "Output per hour, Index ",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}
